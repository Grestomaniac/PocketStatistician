<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pocketstatistician">

    <application
        android:hardwareAccelerated="true"
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.MainMenuActivity"
            android:label = "Main Activity"
            android:windowSoftInputMode="adjustPan">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.StatisticsMenuActivity"
            android:label="@string/statistic_menu">
        </activity>

        <activity android:name=".activities.AddNoteActivity"
            android:label="@string/add_note">
        </activity>

        <activity android:name=".activities.TableActivity">
        </activity>

        <activity android:name=".activities.StatisticEditor">

        </activity>

    </application>
</manifest>
