<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pocketstatistician">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.pocketstatistician.MainActivity"
            android:label = "Main Activity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.pocketstatistician.NewStatisticsActivity"
            android:label = "@string/new_statistics_activity_name"
            android:parentActivityName="com.example.pocketstatistician.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=
                    "com.example.pocketstatistician.MainActivity" />
        </activity>

        <activity android:name="com.example.pocketstatistician.NewVariableActivity"
            android:label = "@string/new_type_activity_name">
        </activity>

    </application>
</manifest>
