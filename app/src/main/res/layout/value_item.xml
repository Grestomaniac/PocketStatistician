<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/item_name">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/variable_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/item_number"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionNext"/>

        <TextView
            android:id="@+id/variable_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/not_chosen"
            android:gravity="center"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:backgroundTintMode="src_in"
        android:src="@drawable/ic_clear"
        android:background="?attr/selectableItemBackgroundBorderless"/>

</FrameLayout>