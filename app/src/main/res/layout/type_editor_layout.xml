<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTableTop">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="7dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/type"
                    android:textSize="20sp"
                    android:padding="7dp"
                    android:background="@drawable/input_head"
    />

                <EditText
                    android:id="@+id/type_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:autofillHints="untitled"
                    android:padding="7dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/input_foot"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/quantity_chooser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="7dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/variants_count"
                    android:padding="7dp"
                    android:textSize="20sp"
                    android:background="@drawable/input_head"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_foot">

                    <EditText
                        android:id="@+id/variant_count"
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:paddingHorizontal="10dp"
                        android:autofillHints="2"/>

                    <Button
                        android:id="@+id/ok_count_button"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ok"
                        android:background="@drawable/button"
                        android:onClick="onCountButtonClick"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/variant_placeholder"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textSize="20sp"
                    android:weightSum="100"
                    android:text="@string/variants"
                    android:background="@drawable/input_head">

                </TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_foot">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_of_variants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>